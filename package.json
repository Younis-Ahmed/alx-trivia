    "release": "npm run lint && npm run build && changeset publish",
    "debug": "tsc --sourcemap"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@types/node": "^20.11.5",
    "figlet": "^1.7.0",
    "lolcatjs": "^2.4.3",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/figlet": "^1.5.8",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
