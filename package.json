{
  "name": "@younis-ahmed/alx-trivia",
  "description": "Trivia game for the terminal based on the ALX curriculum",
  "author": {
    "name": "Younis Ahmed"
  },
  "license": "MIT",
  "version": "0.3.2",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Younis-Ahmed/alx-trivia.git"
  },
  "homepage": "https://github.com/Younis-Ahmed/alx-trivia#README.md",
  "private": false,

  "bin": "bin/app.js",
  "keywords": [
    "trivia",
    "terminal",
    "cli",
    "game",
    "alx"
  ],
  "scripts": {
    "build": "tsup index.ts --format cjs,esm --dts && cp declare.d.ts dist/", 
